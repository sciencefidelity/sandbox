{
  "name": "jest-test-template",
  "version": "0.1.0",
  "description": "main",
  "main": "index.ts",
  "author": "Matt Cook <matt@sciencefidelity.co.uk>",
  "license": "MIT",
  "private": true,
  "env": {
    "node": true
  },
  "scripts": {
    "watch": "ts-node-dev --respawn ./index.ts",
    "lint": "eslint --format=pretty '**/*.{ts,js}'",
    "format": "prettier --write '**/*.{ts,js,json,md,yml}'",
    "fix": "(yarn format) && (yarn lint --fix)",
    "test": "jest --watchAll --verbose",
    "coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-formatter-pretty": "^4.1.0",
    "eslint-plugin-jest": "^27.2.0",
    "jest": "^29.3.1",
    "node-dev": "^8.0.0",
    "prettier": "^2.8.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  }
}
